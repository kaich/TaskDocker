<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.label :email ,t(:email) %><br />
    <%= f.email_field :email, autofocus: true , class:"form-control col-sm-6" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, t(:password) %><br />
    <%= f.password_field :password, autocomplete: "off" , class:"form-control col-sm-6"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field check-box">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t(:remember_me) %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t(:log_in) ,class:"btn btn-warning col-md-12" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
