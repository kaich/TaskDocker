<!-- Navigation -->
<nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
            </button>
            <% if controller_name == "welcome" %>
              <a class="navbar-brand" href="#page-top">DingtuBike</a>
            <% else %>
              <%= link_to :DingtuBike , root_path , class:"navbar-brand" %>
            <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <% if controller_name == "welcome" %>
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                <li class="page-scroll">
                    <a href="#hot-bikes"><%= t "welcome.index.bike" %></a>
                </li>
                <li class="page-scroll">
                    <a href="#recent-activities"><%= t "welcome.index.activity" %></a>
                </li>
                <li class="page-scroll">
                    <a href="#about"><%= t "welcome.index.about" %></a>
                </li>
              <% end %>
                <li class="user page-scroll">
                    <% if !current_user %>
                      <% if !controller_path.include? "devise" %>
                        <ul class="nav navbar-nav navbar-right">
                          <li><%= link_to '<span class="fa fa-user"></span>&nbsp'.html_safe + t(:sign_up), new_user_registration_url %></li>
                          <li><%= link_to '<span class="fa fa-sign-in"></span>&nbsp'.html_safe + t(:log_in ), new_user_session_url %></li>
                        </ul>
                      <% end %>
                    <% else %>
                      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <%= image_tag(current_user.avatar.thumb.url) %>
                        <%= current_user.nick.blank? ? current_user.email : current_user.nick %>
                        <span class="caret"></span>
                      </a>
                      <ul class="dropdown-menu" role="menu" >
                        <li><%= link_to t(:user_information_edit), edit_users_information_path(current_user) %></li>
                        <li><%= link_to t(:logout), destroy_user_session_path , method: :delete %></li>
                      </ul>
                    <% end %>
                </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>
